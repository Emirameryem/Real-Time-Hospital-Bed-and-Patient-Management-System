@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hastane Yatak Yönetim Sistemi</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'medical-blue': '#1e40af',
                        'medical-green': '#059669',
                        'medical-red': '#dc2626',
                        'medical-orange': '#ea580c'
                    }
                }
            }
        }
    </script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50 font-sans">
    <!-- Login Page -->
    <div id="loginPage" class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-600 to-blue-800">
        <div class="bg-white p-8 rounded-2xl shadow-2xl w-full max-w-md">
            <div class="text-center mb-8">
                <div class="bg-blue-100 w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-hospital text-3xl text-blue-600"></i>
                </div>
                <h1 class="text-2xl font-bold text-gray-800">Hastane Yatak Yönetimi</h1>
                <p class="text-gray-600 mt-2">Sisteme giriş yapın</p>
            </div>

            <form id="loginForm" class="space-y-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Kullanıcı Adı</label>
                    <input type="text" id="username" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Kullanıcı adınızı girin">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Şifre</label>
                    <input type="password" id="password" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Şifrenizi girin">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Rol</label>
                    <select id="role" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="">Rol seçin</option>
                        <option value="nurse">Hemşire</option>
                        <option value="cleaner">Temizlikçi</option>
                        <option value="admin">Admin</option>
                    </select>
                </div>

                <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition duration-200 font-medium">
                    Giriş Yap
                </button>
            </form>

            <div class="mt-6 text-center text-sm text-gray-500">
                <p>Demo hesaplar: hemşire/123, temizlikçi/123, admin/123</p>
            </div>
        </div>
    </div>

    <!-- Main Application -->
    <div id="mainApp" class="hidden">
        <!-- Header -->
        <header class="bg-white shadow-sm border-b">
            <div class="flex items-center justify-between px-6 py-4">
                <div class="flex items-center space-x-4">
                    <div class="bg-blue-100 w-10 h-10 rounded-lg flex items-center justify-center">
                        <i class="fas fa-hospital text-blue-600"></i>
                    </div>
                    <div>
                        <h1 class="text-xl font-bold text-gray-800">Yatak Yönetim Sistemi</h1>
                        <p class="text-sm text-gray-600" id="userInfo">Hoş geldiniz</p>
                    </div>
                </div>

                <div class="flex items-center space-x-4">
                    <div class="flex items-center space-x-2 bg-gray-100 px-3 py-2 rounded-lg">
                        <i class="fas fa-clock text-gray-600"></i>
                        <span class="text-sm text-gray-700" id="currentTime"></span>
                    </div>
                    <button onclick="logout()" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition duration-200">
                        <i class="fas fa-sign-out-alt mr-2"></i>Çıkış
                    </button>
                </div>
            </div>
        </header>

        <!-- Navigation -->
        <nav class="bg-gray-800 text-white">
            <div class="px-6">
                <div class="flex space-x-8" id="navigation">
                    <!-- Navigation items will be populated based on role -->
                </div>
            </div>
        </nav>

        <!-- Content Area -->
        <main class="p-6">
            <!-- Dashboard -->
            <div id="dashboard" class="page-content">
                <div class="mb-6">
                    <h2 class="text-2xl font-bold text-gray-800 mb-2">Dashboard</h2>
                    <p class="text-gray-600">Sistem durumu ve hızlı erişim</p>
                </div>

                <div id="dashboardContent">
                    <!-- Dashboard content will be populated based on role -->
                </div>
            </div>

            <!-- Bed List Page -->
            <div id="bedList" class="page-content hidden">
                <div class="mb-6 flex items-center justify-between">
                    <div>
                        <h2 class="text-2xl font-bold text-gray-800 mb-2">Yatak Listesi</h2>
                        <p class="text-gray-600">Tüm yatakların durumu</p>
                    </div>

                    <div class="flex items-center space-x-4">
                        <select id="bedFilter" class="px-4 py-2 border border-gray-300 rounded-lg">
                            <option value="">Tüm Durumlar</option>
                            <option value="empty">Boş</option>
                            <option value="occupied">Dolu</option>
                            <option value="cleaning">Temizlikte</option>
                        </select>

                        <input type="text" id="bedSearch" placeholder="Yatak ara..." class="px-4 py-2 border border-gray-300 rounded-lg">
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6" id="bedGrid">
                    <!-- Bed cards will be populated here -->
                </div>
            </div>

            <!-- Patient Assignment Page (Nurse only) -->
            <div id="patientAssignment" class="page-content hidden">
                <div class="mb-6">
                    <h2 class="text-2xl font-bold text-gray-800 mb-2">Hasta Atama</h2>
                    <p class="text-gray-600">Boş yataklara hasta atayın</p>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    <div class="bg-white rounded-xl shadow-sm p-6">
                        <h3 class="text-lg font-semibold text-gray-800 mb-4">Boş Yataklar</h3>
                        <div class="space-y-3" id="emptyBedsList">
                            <!-- Empty beds will be listed here -->
                        </div>
                    </div>

                    <div class="bg-white rounded-xl shadow-sm p-6">
                        <h3 class="text-lg font-semibold text-gray-800 mb-4">Hasta Bilgileri</h3>
                        <form id="patientForm" class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Hasta Adı</label>
                                <input type="text" id="patientName" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">TC Kimlik No</label>
                                <input type="text" id="patientId" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Yaş</label>
                                <input type="number" id="patientAge" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Tanı</label>
                                <textarea id="patientDiagnosis" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" rows="3"></textarea>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Seçili Yatak</label>
                                <input type="text" id="selectedBed" readonly class="w-full px-4 py-2 bg-gray-100 border border-gray-300 rounded-lg">
                            </div>

                            <button type="submit" class="w-full bg-green-600 text-white py-3 rounded-lg hover:bg-green-700 transition duration-200">
                                Hastayı Ata
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Cleaning Management Page (Cleaner only) -->
            <div id="cleaningManagement" class="page-content hidden">
                <div class="mb-6">
                    <h2 class="text-2xl font-bold text-gray-800 mb-2">Temizlik Yönetimi</h2>
                    <p class="text-gray-600">Yatak temizlik durumları</p>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                    <div class="lg:col-span-2">
                        <div class="bg-white rounded-xl shadow-sm p-6">
                            <h3 class="text-lg font-semibold text-gray-800 mb-4">Temizlik Bekleyen Yataklar</h3>
                            <div class="space-y-3" id="cleaningBedsList">
                                <!-- Beds needing cleaning will be listed here -->
                            </div>
                        </div>
                    </div>

                    <div>
                        <div class="bg-white rounded-xl shadow-sm p-6">
                            <h3 class="text-lg font-semibold text-gray-800 mb-4">Temizlik Geçmişi</h3>
                            <div class="space-y-3" id="cleaningHistory">
                                <!-- Cleaning history will be shown here -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bed Management Page (Admin only) -->
            <div id="bedManagement" class="page-content hidden">
                <div class="mb-6 flex items-center justify-between">
                    <div>
                        <h2 class="text-2xl font-bold text-gray-800 mb-2">Yatak Yönetimi</h2>
                        <p class="text-gray-600">Yatak ekleme, düzenleme ve silme</p>
                    </div>

                    <button onclick="showAddBedModal()" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition duration-200">
                        <i class="fas fa-plus mr-2"></i>Yeni Yatak Ekle
                    </button>
                </div>

                <div class="bg-white rounded-xl shadow-sm overflow-hidden">
                    <table class="w-full">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Yatak No</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Oda</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Durum</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Son Güncelleme</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200" id="bedManagementTable">
                            <!-- Bed management rows will be populated here -->
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- User Management Page (Admin only) -->
            <div id="userManagement" class="page-content hidden">
                <div class="mb-6 flex items-center justify-between">
                    <div>
                        <h2 class="text-2xl font-bold text-gray-800 mb-2">Kullanıcı Yönetimi</h2>
                        <p class="text-gray-600">Kullanıcı ekleme, düzenleme ve rol atama</p>
                    </div>

                    <button onclick="showAddUserModal()" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition duration-200">
                        <i class="fas fa-user-plus mr-2"></i>Yeni Kullanıcı Ekle
                    </button>
                </div>

                <div class="bg-white rounded-xl shadow-sm overflow-hidden">
                    <table class="w-full">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Kullanıcı Adı</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ad Soyad</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rol</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Son Giriş</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200" id="userManagementTable">
                            <!-- User management rows will be populated here -->
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Reports Page (Admin only) -->
            <div id="reports" class="page-content hidden">
                <div class="mb-6">
                    <h2 class="text-2xl font-bold text-gray-800 mb-2">Raporlar ve Loglar</h2>
                    <p class="text-gray-600">Sistem raporları ve aktivite logları</p>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
                    <div class="bg-white rounded-xl shadow-sm p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm font-medium text-gray-600">Toplam Yatak</p>
                                <p class="text-2xl font-bold text-gray-900">50</p>
                            </div>
                            <div class="bg-blue-100 p-3 rounded-full">
                                <i class="fas fa-bed text-blue-600"></i>
                            </div>
                        </div>
                    </div>

                    <div class="bg-white rounded-xl shadow-sm p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm font-medium text-gray-600">Doluluk Oranı</p>
                                <p class="text-2xl font-bold text-gray-900">78%</p>
                            </div>
                            <div class="bg-green-100 p-3 rounded-full">
                                <i class="fas fa-chart-line text-green-600"></i>
                            </div>
                        </div>
                    </div>

                    <div class="bg-white rounded-xl shadow-sm p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm font-medium text-gray-600">Günlük Temizlik</p>
                                <p class="text-2xl font-bold text-gray-900">12</p>
                            </div>
                            <div class="bg-orange-100 p-3 rounded-full">
                                <i class="fas fa-broom text-orange-600"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    <div class="bg-white rounded-xl shadow-sm p-6">
                        <h3 class="text-lg font-semibold text-gray-800 mb-4">Son Aktiviteler</h3>
                        <div class="space-y-4" id="recentActivities">
                            <!-- Recent activities will be shown here -->
                        </div>
                    </div>

                    <div class="bg-white rounded-xl shadow-sm p-6">
                        <h3 class="text-lg font-semibold text-gray-800 mb-4">Yatak Kullanım Grafiği</h3>
                        <div class="h-64 flex items-center justify-center bg-gray-50 rounded-lg">
                            <p class="text-gray-500">Grafik burada gösterilecek</p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Modals -->
    <div id="bedDetailModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
        <div class="bg-white rounded-xl p-6 w-full max-w-md mx-4">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-gray-800">Yatak Detayları</h3>
                <button onclick="closeBedDetailModal()" class="text-gray-400 hover:text-gray-600">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div id="bedDetailContent">
                <!-- Bed details will be populated here -->
            </div>
        </div>
    </div>

    <script>
        // Global variables
        let currentUser = null;
        let currentPage = 'dashboard';
        let beds = [
            { id: 'B001', room: '101', status: 'empty', patient: null, lastCleaned: '2024-01-15 10:30' },
            { id: 'B002', room: '101', status: 'occupied', patient: { name: 'Ahmet Yılmaz', id: '12345678901', age: 45, diagnosis: 'Kalp rahatsızlığı' }, lastCleaned: '2024-01-14 14:20' },
            { id: 'B003', room: '102', status: 'cleaning', patient: null, lastCleaned: '2024-01-15 09:15' },
            { id: 'B004', room: '102', status: 'empty', patient: null, lastCleaned: '2024-01-15 11:45' },
            { id: 'B005', room: '103', status: 'occupied', patient: { name: 'Fatma Demir', id: '98765432109', age: 62, diagnosis: 'Diyabet kontrolü' }, lastCleaned: '2024-01-13 16:30' },
            { id: 'B006', room: '103', status: 'empty', patient: null, lastCleaned: '2024-01-15 08:00' }
        ];

        let users = [
            { username: 'hemşire', password: '123', role: 'nurse', fullName: 'Ayşe Hemşire', lastLogin: '2024-01-15 09:30' },
            { username: 'temizlikçi', password: '123', role: 'cleaner', fullName: 'Mehmet Temizlik', lastLogin: '2024-01-15 08:15' },
            { username: 'admin', password: '123', role: 'admin', fullName: 'Admin Kullanıcı', lastLogin: '2024-01-15 10:00' }
        ];

        // Initialize the application
        document.addEventListener('DOMContentLoaded', function() {
            updateTime();
            setInterval(updateTime, 1000);

            // Login form handler
            document.getElementById('loginForm').addEventListener('submit', function(e) {
                e.preventDefault();
                login();
            });

            // Bed filter and search
            document.getElementById('bedFilter').addEventListener('change', filterBeds);
            document.getElementById('bedSearch').addEventListener('input', filterBeds);

            // Patient assignment form
            document.getElementById('patientForm').addEventListener('submit', function(e) {
                e.preventDefault();
                assignPatient();
            });
        });

        function updateTime() {
            const now = new Date();
            const timeString = now.toLocaleString('tr-TR');
            const timeElement = document.getElementById('currentTime');
            if (timeElement) {
                timeElement.textContent = timeString;
            }
        }

        function login() {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            const role = document.getElementById('role').value;

            if (!username || !password || !role) {
                alert('Lütfen tüm alanları doldurun!');
                return;
            }

            const user = users.find(u => u.username === username && u.password === password && u.role === role);

            if (user) {
                currentUser = user;
                document.getElementById('loginPage').classList.add('hidden');
                document.getElementById('mainApp').classList.remove('hidden');

                document.getElementById('userInfo').textContent = `${getRoleText(user.role)} - ${user.fullName}`;

                setupNavigation();
                showPage('dashboard');
            } else {
                alert('Geçersiz kullanıcı bilgileri!');
            }
        }

        function logout() {
            currentUser = null;
            document.getElementById('loginPage').classList.remove('hidden');
            document.getElementById('mainApp').classList.add('hidden');

            // Clear form
            document.getElementById('loginForm').reset();
        }

        function getRoleText(role) {
            const roleTexts = {
                'nurse': 'Hemşire',
                'cleaner': 'Temizlikçi',
                'admin': 'Admin'
            };
            return roleTexts[role] || role;
        }

        function setupNavigation() {
            const nav = document.getElementById('navigation');
            nav.innerHTML = '';

            const commonPages = [
                { id: 'dashboard', text: 'Dashboard', icon: 'fas fa-home' },
                { id: 'bedList', text: 'Yatak Listesi', icon: 'fas fa-bed' }
            ];

            const rolePages = {
                nurse: [
                    { id: 'patientAssignment', text: 'Hasta Atama', icon: 'fas fa-user-plus' }
                ],
                cleaner: [
                    { id: 'cleaningManagement', text: 'Temizlik Yönetimi', icon: 'fas fa-broom' }
                ],
                admin: [
                    { id: 'bedManagement', text: 'Yatak Yönetimi', icon: 'fas fa-cog' },
                    { id: 'userManagement', text: 'Kullanıcı Yönetimi', icon: 'fas fa-users' },
                    { id: 'reports', text: 'Raporlar', icon: 'fas fa-chart-bar' }
                ]
            };

            const allPages = [...commonPages, ...(rolePages[currentUser.role] || [])];

            allPages.forEach(page => {
                const navItem = document.createElement('a');
                navItem.href = '#';
                navItem.className = 'flex items-center space-x-2 px-4 py-3 text-gray-300 hover:text-white hover:bg-gray-700 rounded-lg transition duration-200';
                navItem.innerHTML = `<i class="${page.icon}"></i><span>${page.text}</span>`;
                navItem.onclick = (e) => {
                    e.preventDefault();
                    showPage(page.id);
                };
                nav.appendChild(navItem);
            });
        }

        function showPage(pageId) {
            // Hide all pages
            document.querySelectorAll('.page-content').forEach(page => {
                page.classList.add('hidden');
            });

            // Show selected page
            document.getElementById(pageId).classList.remove('hidden');
            currentPage = pageId;

            // Update navigation active state
            document.querySelectorAll('#navigation a').forEach(link => {
                link.classList.remove('bg-gray-700', 'text-white');
                link.classList.add('text-gray-300');
            });

            // Load page content
            switch(pageId) {
                case 'dashboard':
                    loadDashboard();
                    break;
                case 'bedList':
                    loadBedList();
                    break;
                case 'patientAssignment':
                    loadPatientAssignment();
                    break;
                case 'cleaningManagement':
                    loadCleaningManagement();
                    break;
                case 'bedManagement':
                    loadBedManagement();
                    break;
                case 'userManagement':
                    loadUserManagement();
                    break;
                case 'reports':
                    loadReports();
                    break;
            }
        }

        function loadDashboard() {
            const content = document.getElementById('dashboardContent');

            if (currentUser.role === 'nurse') {
                const emptyBeds = beds.filter(bed => bed.status === 'empty').length;
                const occupiedBeds = beds.filter(bed => bed.status === 'occupied').length;

                content.innerHTML = `
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
                        <div class="bg-white rounded-xl shadow-sm p-6">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium text-gray-600">Boş Yataklar</p>
                                    <p class="text-3xl font-bold text-green-600">${emptyBeds}</p>
                                </div>
                                <div class="bg-green-100 p-3 rounded-full">
                                    <i class="fas fa-bed text-green-600 text-xl"></i>
                                </div>
                            </div>
                        </div>

                        <div class="bg-white rounded-xl shadow-sm p-6">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium text-gray-600">Dolu Yataklar</p>
                                    <p class="text-3xl font-bold text-blue-600">${occupiedBeds}</p>
                                </div>
                                <div class="bg-blue-100 p-3 rounded-full">
                                    <i class="fas fa-user-injured text-blue-600 text-xl"></i>
                                </div>
                            </div>
                        </div>

                        <div class="bg-white rounded-xl shadow-sm p-6">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium text-gray-600">Toplam Hasta</p>
                                    <p class="text-3xl font-bold text-purple-600">${occupiedBeds}</p>
                                </div>
                                <div class="bg-purple-100 p-3 rounded-full">
                                    <i class="fas fa-users text-purple-600 text-xl"></i>
                                </div>
                            </div>
                        </div>
